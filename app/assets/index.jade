extends templates/layout.jade

block content
	#home-wrap.perspective-1000
		.inner-wrap
			header.mbrt-head
				include _modules/_four-logo.jade

			section.illustration-body.p_layer.perspective-500
				h1._title.p_layer
					span.division.left#mouseX Fo
					span.division.right#mouseY ur

				.illus-container
					.mb-rect-bottomright.p_layer

					.mb-up-circle.p_layer

					.mb-stairs.p_layer
						.steps.step-1
						.steps.step-2
						.steps.step-3
						.steps.step-4

					.mb-rect-top-right.p_layer

					.mb-dune-stairs.p_layer
						include _modules/svgs/_mb-dune.jade
						.door
							.white-stairs
								.steps.step-1
								.steps.step-2
								.steps.step-3
								.steps.step-4

					.mb-rect.p_layer

					.mb-gray-rect.p_layer

					.mb-bottom-stairs.p_layer
						.steps.step-1
						.steps.step-2
						.steps.step-3
						.steps.step-4
						.window-dark

					.mb-square.clip.p_layer
						.mb-arch
						.mb-dark-arch

						.mb-wrap.fullwidth.fullheight.bottom.right
							include _modules/svgs/_mb-wave.jade

					.mb-wrap.triplewidth.fullheight.top.right.p_layer
						.mb-circle-pink
							.inner-circle

					.mb-drop-white.p_layer
						include _modules/svgs/_mb-drop-white.jade

					.mb-cilinder.p_layer
					.mb-circle-inner.p_layer

					.mb-wrap.doublewidth.bottom.right.p_layer
						include _modules/svgs/_mb-circle-eclipse.jade

					.mb-wrap.triplewidth.tripleheight.top.right.p_layer
						.mb-duocircle
							.inner-rect-red


			footer.mbrt-footer
				.instructions-wrap
					p
						span.mask-container
							span.up-in Scroll down to
					p
						span.mask-container
							span.up-in discover our family

				.author-wrap
					p 
						span.mask-container
							span.up-in
								|Site by 
								img(src="img/mbrt_logo.png", alt="mandelbrot studio").mbrt-logo
					p
						span.mask-container
							span.up-in Fourth Anniversary


